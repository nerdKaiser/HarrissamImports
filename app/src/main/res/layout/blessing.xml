<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Supp.SuppDas">

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myImage"
        android:background="@color/backy"
        android:text="Verify"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpload"
        android:layout_marginBottom="10sp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnrStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

            <EditText
                android:id="@+id/appMess"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spnrStatus"
                android:hint="Type some Message" />

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appMess"
                android:layout_margin="10sp"
                android:background="#05B50C"
                android:text="Submit"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>