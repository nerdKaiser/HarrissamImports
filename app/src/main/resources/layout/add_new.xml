<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="#DDCFCF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_marginBottom="10sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/typeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:background="#fff"
                android:text="Set the Date here"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeDate"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:background="#fff"
                android:gravity="top"
                android:hint="Description."
                android:inputType="text"
                android:maxWidth="279dp"
                android:maxLength="150"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/editDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10sp" />

            <Button
                android:id="@+id/btnBrowse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_margin="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:background="#F8E21D"
                android:text="Browse_Image"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_margin="10sp"
                android:layout_toRightOf="@+id/btnBrowse"
                android:background="#05B50C"
                android:text="Submit"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>